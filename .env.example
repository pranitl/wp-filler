# WordPress Credentials
# Use the full path to wp-admin (update based on your test results)
# Example: https://www.firstlighthomecare.com/home-healthcare-boston-northwest/wp-admin
WP_ADMIN_URL=https://your-wordpress-site.com/wp-admin
WP_USERNAME=your_username
WP_PASSWORD=your_password

# Server Configuration
PORT=3000
NODE_ENV=development

# Playwright Configuration
HEADLESS=false
BROWSER_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000
SLOW_MO=100  # Milliseconds between actions (makes it more human-like)

# Logging
LOG_LEVEL=info
LOG_FILE=logs/wp-filler.log

# N8N Webhook Security (optional)
WEBHOOK_SECRET=your_webhook_secret_here

# Debugging
DEBUG_MODE=true
SCREENSHOT_ON_ERROR=true
SCREENSHOT_PATH=logs/screenshots